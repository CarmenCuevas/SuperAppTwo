<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0.5dp"
    android:background="#ff5722"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/txt_personal_price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/space_products"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:maxLines="2"
            android:textStyle="bold|italic"

            android:layout_gravity="top|center_vertical"
            android:text="9.9999" />


        <LinearLayout
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_personal_super"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/space_products"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="bold|italic"
                android:text="AURRERA BODEGA SUCURSAL MARIANO ESCOBEDO" />
            <TextView
                android:id="@+id/txt_personal_direc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/space_products"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="bold|italic"
                android:text="LAGO COMO NO. 160 ESQ. MARIANO ESCOBEDO" />

        </LinearLayout>

        <Button
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:text="A"
            android:id="@+id/buttonP"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/but1" />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/txt_personal_price2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/space_products"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:maxLines="2"
            android:textStyle="bold|italic"

            android:layout_gravity="left|center_vertical"
            android:text="10.5000" />


        <LinearLayout
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_personal_super2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/space_products"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="bold|italic"
                android:text="BODEGA AURRERA SUCURSAL TACUBAYA"
                android:layout_gravity="left|center_vertical" />
            <TextView
                android:id="@+id/txt_personal_direc2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/space_products"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="bold|italic"
                android:text="PARQUE LIRA NO. 145, ESQ. JALISCO" />

        </LinearLayout>

        <Button
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:text="A"
            android:id="@+id/buttonP2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/but1" />


    </LinearLayout>
</LinearLayout>
